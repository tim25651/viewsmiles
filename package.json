{
  "name": "viewsmiles",
  "displayName": "ViewSMILES",
  "description": "Hover over SMILES strings in your codebase and it renders the structural formulae.",
  "publisher": "tim25651",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/tim25651/viewsmiles"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "python",
        "extensions": [
          ".py"
        ],
        "aliases": [
          "Python"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build": "esbuild --bundle src/extension.ts --outfile=out/extension.js --platform=node --target=node16 --format=cjs --sourcemap --external:vscode --external:svgdom --external:smiles-drawer"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.14",
    "@types/svgdom": "^0.1.2",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "smiles-drawer": "^2.1.7",
    "svgdom": "^0.1.19"
  }
}
