{
  "name": "viewsmiles",
  "displayName": "ViewSMILES",
  "description": "Hover over SMILES strings in your codebase and it renders the structural formulae.",
  "publisher": "tim25651",
  "icon": "images/icon.png",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/tim25651/viewsmiles"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "ViewSMILES",
      "properties": {
        "viewsmiles.kekule": {
          "type": "boolean",
          "default": false,
          "description": "Use Kekule structure instead of aromatic structure."
        }
      }
    },
    "languages": [
      {
        "id": "python",
        "extensions": [
          ".py"
        ],
        "aliases": [
          "Python"
        ]
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && bash xhr_fix.sh && node esbuild.js --production"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.14",
    "@types/svgdom": "^0.1.2",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "jsdom": "^24.1.1",
    "smiles-drawer": "^2.1.7"
  }
}
